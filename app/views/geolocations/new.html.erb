<div data-controller='geolocation'>
  <button data-action='click->geolocation#geolocate'>Get Location </button>
 <%= form_with url: geolocations_path do |form| %>
    <%= form.label :longitude %>
    <%= form.text_field :longitude, data:{'geolocation-target' => 'longitude'} %>

    <%= form.label :latitude %>
    <%= form.text_field :latitude, data:{'geolocation-target' => 'latitude'} %>

    <%= form.submit %> 
  <% end %>
 
</div>
<h1><%= @suburb %></h1>